<div id="comments" class="row text-center p-3">
    {% if app.user %}
        <div class="col-sm-10 col-md-8 mx-auto">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary mx-auto">Commenter</button>
            {{ form_end(form) }}
        </div>
    {% else %}
        <div class="col-sm-10 col-md-8 mx-auto">
            <p>Veuillez vous connecter pour laisser un commentaire</p>
        </div>
    {% endif %}
</div>
<div class="row p-3">
    {% for comment in trick.comments %}
        <div class="col-lg-8 p-1 mx-auto">
            <div class="card">
                <div class="card-body">
                    {% if app.user and (app.user == comment.user) %}
                        <div class="edit-button p-1">
                            <a
                                href="#"
                                data-bs-toggle="modal" data-bs-target="#delete-{{ comment.id }}">
                                <i class="bi bi-trash-fill text-danger"></i>
                            </a>
                        </div>
                        <div
                            class="modal fade"
                            id="delete-{{ comment.id }}"
                            tabindex="-1"
                            aria-labelledby="delete-{{ comment.id }}-label"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">
                                            Confirmer la supression
                                        </h5>
                                        <button
                                            type="button"
                                            class="btn-close"
                                            data-bs-dismiss="modal"
                                            aria-label="Close">
                                        </button>
                                    </div>
                                    <div class="modal-footer">
                                        <button
                                            type="button"
                                            class="btn btn-secondary"
                                            data-bs-dismiss="modal">
                                            Annuler
                                        </button>
                                        <a
                                            role="button"
                                            class="btn btn-danger"
                                            href="{{ path('comment_delete', {id: comment.id}) }}">
                                            Supprimer
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <h5 class="card-title">{{ comment.user.username }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Le {{ comment.createdAt | date('d/m/Y') }} Ã  {{ comment.createdAt | date('H:i') }}</h6>
                    <p class="card-text">{{ comment.content }}</p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>